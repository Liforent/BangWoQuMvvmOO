<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.zues.ruiyu.bangwoqu.custom.ZssTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title_text="详情" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_view">

        <ImageView
            android:id="@+id/iv_com_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_avatar_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_com_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#5B6F7D"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_order_time"
            app:layout_constraintStart_toEndOf="@id/iv_com_logo"
            app:layout_constraintTop_toTopOf="@id/iv_com_logo"
            tools:text="圆通" />

        <TextView
            android:id="@+id/tv_tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textColor="#5B6F7D"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_com_name"
            app:layout_constraintStart_toEndOf="@id/tv_com_name"
            app:layout_constraintTop_toTopOf="@id/tv_com_name"
            tools:text="123123123132" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:textColor="#FF0F0F"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_com_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_com_name"
            tools:text="待抢单" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black66"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_com_logo"
            app:layout_constraintStart_toStartOf="@id/tv_com_name"
            app:layout_constraintTop_toBottomOf="@id/tv_com_name"
            tools:ignore="SmallSp"
            tools:text="2020/12/12 18:00下单" />

        <ImageView
            android:id="@+id/iv0"
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_package_detail_receiver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_com_logo" />

        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="收件人："
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv0"
            app:layout_constraintStart_toEndOf="@id/iv0"
            app:layout_constraintTop_toTopOf="@id/iv0" />

        <TextView
            android:id="@+id/tv_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无姓名"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv0"
            app:layout_constraintStart_toEndOf="@id/tv0"
            app:layout_constraintTop_toTopOf="@id/tv0" />

        <TextView
            android:id="@+id/tv_receiver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv0"
            app:layout_constraintStart_toEndOf="@id/tv_receiver_name"
            app:layout_constraintTop_toTopOf="@id/tv0"
            tools:text="15056545454" />


        <ImageView
            android:id="@+id/iv1"
            android:layout_width="14dp"
            android:layout_height="16.5dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/ic_pacakge_detail_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv0" />

        <TextView
            android:id="@+id/tv_receiver_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="63dp"
            android:textColor="@color/black33"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/iv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv1"
            app:layout_constraintTop_toTopOf="@id/iv1"
            tools:text="夫斯基大街覅哦设计的佛教四大金佛i时间覅圣诞节哦i附件四哦大家覅哦阿斯顿" />


        <LinearLayout
            android:id="@+id/ll_call"
            android:layout_width="78dp"
            android:layout_height="24dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_btn_r12_blue_stroke"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv1">

            <ImageView
                android:layout_width="13.5dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_package_detail_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="打电话"
                android:textColor="#3271F6"
                android:textSize="12sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_line0"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="#f4f4f4"
        app:layout_constraintTop_toBottomOf="@id/cl_head" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/cl_bwq_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:paddingBottom="11dp"
        app:layout_constraintTop_toBottomOf="@id/view_line0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_bwq_info"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:overScrollMode="never"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_bwq_info" />

</androidx.constraintlayout.widget.ConstraintLayout>