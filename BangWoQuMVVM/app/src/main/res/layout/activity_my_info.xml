<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zues.ruiyu.bangwoqu.custom.ZssTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"
        android:background="@color/themeColor"
        app:layout_constraintTop_toTopOf="parent"
        app:left_img_res="@drawable/ic_back_white"
        app:title_text="我的资料"
        app:ztv_title_text_color="@color/white" />

    <LinearLayout
        android:id="@+id/ll_user_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="用户名："
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="封杀多久哦"
            android:textColor="#FF333333"
            android:textSize="14sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/ic_right_arrow_black" />
    </LinearLayout>

    <View
        android:id="@+id/view_line0"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/view_line_ededf0"
        app:layout_constraintEnd_toEndOf="@id/ll_user_name"
        app:layout_constraintStart_toStartOf="@id/ll_user_name"
        app:layout_constraintTop_toBottomOf="@id/ll_user_name" />



    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_user_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="手机号："
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FF333333"
            android:textSize="14sp"
            tools:text="手机号" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/ic_right_arrow_black"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:id="@+id/view_line5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/view_line_ededf0"
        app:layout_constraintEnd_toEndOf="@id/ll_phone"
        app:layout_constraintStart_toStartOf="@id/ll_phone"
        app:layout_constraintTop_toBottomOf="@id/ll_phone" />


    <View
        android:id="@+id/view_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/view_line_ededf0"
        app:layout_constraintEnd_toEndOf="@id/ll_user_name"
        app:layout_constraintStart_toStartOf="@id/ll_user_name"
        app:layout_constraintTop_toBottomOf="@id/ll_user_name" />


    <LinearLayout
        android:id="@+id/ll_place"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_phone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="所在地区："
            android:textColor="#FF333333"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:textColor="#FF333333"
            android:textSize="14sp"
            tools:text="浙江生台州市三门县" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/ic_right_arrow_black" />
    </LinearLayout>

    <View
        android:id="@+id/view_line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/view_line_ededf0"
        app:layout_constraintEnd_toEndOf="@id/ll_place"
        app:layout_constraintStart_toStartOf="@id/ll_place"
        app:layout_constraintTop_toBottomOf="@id/ll_place" />


    <LinearLayout
        android:id="@+id/ll_detail_address"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_place">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="详细地址："
            android:textColor="#FF333333"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/tv_detail_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:textColor="#FF333333"
            android:textSize="14sp"
            tools:text="浙江生台州市三门县" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/ic_right_arrow_black" />
    </LinearLayout>

    <View
        android:id="@+id/view_line4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/view_line_ededf0"
        app:layout_constraintEnd_toEndOf="@id/ll_detail_address"
        app:layout_constraintStart_toStartOf="@id/ll_detail_address"
        app:layout_constraintTop_toBottomOf="@id/ll_detail_address" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24.5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_login"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>