<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zues.ruiyu.bangwoqu.custom.ZssTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_view_height"
        android:background="@color/themeColor"
        app:layout_constraintTop_toTopOf="parent"
        app:left_img_res="@drawable/ic_back_white"
        app:title_text="快递点"
        app:ztv_title_text_color="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/themeColor"
        app:layout_constraintTop_toBottomOf="@id/title_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_r17_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_com"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="13dp"
                android:drawableRight="@drawable/ic_triangle_bottom_black"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:text="快递公司"
                android:textColor="@color/black33"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_tracking_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入快递单号"
                android:textColor="@color/black33"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_x_white_with_bg" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:background="@color/view_line_ededf0" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="15.5dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_search_gray" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>