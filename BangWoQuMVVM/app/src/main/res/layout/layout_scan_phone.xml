<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="162dp"
    android:visibility="invisible"
    android:background="@drawable/bg_r20_top_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


        <TextView
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_r2_849eb1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_edit_phone_tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:includeFontPadding="false"
            android:textColor="@color/black33"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="快递单号：2489489489484864" />


        <ImageView
            android:id="@+id/iv2"
            android:layout_width="14.5dp"
            android:layout_height="14.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="11dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_scan_in_phone"
            app:layout_constraintBottom_toTopOf="@id/et_str_phone"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="请输入手机号"
            android:textColor="@color/black33"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv2"
            app:layout_constraintStart_toEndOf="@id/iv2"
            app:layout_constraintTop_toTopOf="@id/iv2" />

        <EditText
            android:id="@+id/et_str_phone"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/bg_r5_99"
            android:hint="你的手机号"
            android:inputType="number"
            android:maxLength="11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextFields" />

</androidx.constraintlayout.widget.ConstraintLayout>