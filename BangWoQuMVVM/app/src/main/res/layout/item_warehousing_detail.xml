<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/view_line0"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:background="@color/black33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="23dp"
        android:layout_height="20dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginTop="4.5dp"
        android:src="@drawable/ic_scanner_package_get"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="end|center"
        android:textColor="@color/black33"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_checked"
        tools:text="05-03" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:gravity="end|center"
        android:paddingEnd="2dp"
        android:textColor="@color/black33"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        tools:text="10:28" />



    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="待取件"
        android:textColor="@color/black33"
        android:textSize="14sp"

        app:layout_constraintBottom_toBottomOf="@id/iv_dot"
        app:layout_constraintStart_toEndOf="@id/view_line0"
        app:layout_constraintTop_toTopOf="@id/iv_dot" />


    <TextView
        android:id="@+id/tv_detail_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="start|center"
        android:paddingBottom="5dp"
        android:textColor="@color/black33"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_line0"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        tools:text="法克斯大佛扣税的泼妇看视屏打开法克斯大佛扣税的泼妇看视屏打开方式的法克斯大佛扣税的泼妇看视屏打开方式的方式的" />


    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="5dp"
        android:layout_height="9dp"
        android:layout_marginStart="9.5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:src="@drawable/iv_gray_dot"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="@id/tv_date" />




