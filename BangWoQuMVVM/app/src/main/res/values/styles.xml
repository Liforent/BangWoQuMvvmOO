<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/zy_red_F45C52</item>
        <item name="colorPrimaryDark">@color/black33</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 隐藏标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 处理程序启动时短暂的白屏（该属性可以让程序在初始化的时候窗口透明，初始化结束后主界面才会显示出来，从而也就完全看不出来白屏了。）-->
        <!-- <item name="android:windowIsTranslucent">true</item>-->
        <!-- 设置activity默认背景色为白色-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NavigationTextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NavigationTextAppearance.active" parent="NavigationTextAppearance">
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">16dp</item>
    </style>
    <color name="black33">#333333</color>
    <color name="white">#ffffff</color>
    <color name="zy_red_F45C52">#f45c52</color>
    <color name="themeColor">#FF0092FD</color>


    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zss_anim_actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/zss_anim_actionsheet_dialog_out</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="PickerAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="MyTransDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

</resources>